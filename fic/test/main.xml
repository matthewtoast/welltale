<var name="time" value="{$ timestamp(2001, 1, 1) $}" type="number" />

<music duration="10000" background="true">
  Intro music for a cyberpunk film, dramatic, intense, high stakes
</music>

<sleep duration="3000" />

<p>
  You're playing {{title}}, by {{author}}.
</p>

<p>
  It's {$ formatDate(time, "YYYY") $}. What do you think?
</p>

<input />

<p>
  You said {{input}}.
</p>

<while cond="get('stuff') !== 'exit'">
  <input id="stuff" />
</while>

<p>
  After while loop.
</p>
